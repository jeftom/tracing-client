<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application  name="hello-world-app"  />

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://10.82.12.30:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol  name="dubbo" port="20880" />

    <dubbo:provider filter="brave" />
    <dubbo:consumer filter="brave" />
    <!--<dubbo:consumer injvm="false" filter="braveConsumerFilter,braveProviderFilter" timeout="120000" />-->
    <!--<dubbo:consumer filter=" />"-->
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.bdfint.bdtrace.service.Buy" ref="buy" />
    <!--<dubbo:service interface="com.bdfint.bdtrace.service.BuyA" ref="buyA" />-->
    <!--<dubbo:service interface="com.bdfint.bdtrace.service.BuyB" ref="buyB" />-->
    <dubbo:service interface="com.bdfint.bdtrace.service.BuyAA" ref="buyAA" />
    <dubbo:service interface="com.bdfint.bdtrace.service.BuyAB" ref="buyAB" />
    <!--<dubbo:service interface="com.bdfint.bdtrace.service.BuyABA" ref="buyABA" />-->
    <!--<dubbo:service interface="com.bdfint.bdtrace.service.BuyABB" ref="buyABB" />-->

    <!-- 和本地bean一样实现服务 -->
    <bean id="buy" class="com.bdfint.bdtrace.service.BuyOnInternet" />
    <!--<bean id="buyA" class="com.bdfint.bdtrace.service.BuyOnInternetA" />-->
    <!--<bean id="buyB" class="com.bdfint.bdtrace.service.BuyOnInternetB" />-->
    <bean id="buyAA" class="com.bdfint.bdtrace.service.BuyOnInternetAA" />
    <bean id="buyAB" class="com.bdfint.bdtrace.service.BuyOnInternetAB" />
    <!--<bean id="buyABA" class="com.bdfint.bdtrace.service.BuyOnInternetABA" />-->
    <!--<bean id="buyABB" class="com.bdfint.bdtrace.service.BuyOnInternetABB" />-->

    <!--<dubbo:reference id="rbuy" interface="com.bdfint.bdtrace.service.Buy" />-->
    <dubbo:reference id="rbuyA" interface="com.bdfint.bdtrace.service.BuyA" />
    <dubbo:reference id="rbuyB" interface="com.bdfint.bdtrace.service.BuyB" />
    <!--<dubbo:reference id="rbuyAA" interface="com.bdfint.bdtrace.service.BuyAA" />-->
    <!--<dubbo:reference id="rbuyAB" interface="com.bdfint.bdtrace.service.BuyAB" />-->
    <dubbo:reference id="rbuyABA" interface="com.bdfint.bdtrace.service.BuyABA" />
    <dubbo:reference id="rbuyABB" interface="com.bdfint.bdtrace.service.BuyABB" />
</beans>